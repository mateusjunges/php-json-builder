{
    "name": "mateusjunges/php-json-builder",
    "description": "A simple utility class to work with Json objects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mateus Junges",
            "email": "mateus@junges.dev",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^v8.83",
        "illuminate/collections": "^v8.83"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Junges\\Json\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Junges\\Json\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests"
    }
}
